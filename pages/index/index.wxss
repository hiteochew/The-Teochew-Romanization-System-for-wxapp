.book-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:68rpx auto;
  position: relative;
}
.book-pic{
  background: #ffffff;
  border-radius: 0 25rpx 25rpx 0;
  width: 180rpx;
  height: 250rpx;
  margin:20rpx auto 30rpx;
  padding: 12rpx;
  box-shadow: #aaa 0rpx 0rpx 1rpx 0rpx;
  /*box-sizing:border-box;
-moz-box-sizing:border-box;
-webkit-box-sizing:border-box;*/
}
.book-title {
  margin: 2rpx auto;
  font-size: 11pt;
  line-height: 2;
  color: #0168B7;
}
.book-author {
  font-size: 9pt;
  color: #888888;
}




